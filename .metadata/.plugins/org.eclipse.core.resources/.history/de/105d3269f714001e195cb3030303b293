package program;

import java.util.Random;
import java.util.Scanner;

public class Random1 {

	public static void main(String[] args) {

		Random gerador = new Random();
		
		Scanner sc = new Scanner(System.in);

		
		int x = gerador.nextInt(100);

		for (int i = 0; i <= 100; i++) {
			System.out.println("Favor digitar um número para advinhar:");
			int n = sc.nextInt();
			if (!(n == x)) {
				if (x > n) {
					System.out.println("Número escolhido menor que o número para adivinhar, tente de novo " + x);
					
				} else {
					if (x < n) {
						System.out.println("Número escolhido maior que o número para adivinhar, tente de novo: " + x);
					}else {
						
							System.out.println("Você acertou o número!! parabéns." + n + " " + x);
						}
					}
				}
				
			}

		

	}
}

package program;

import java.util.Scanner;

public class Exercício1e2 {

	public static void main(String[] args) {

		Scanner sc = new Scanner(System.in);
		int soma =0;
		System.out.println("Digite a quantos números verificarão sua paridade?");
		int n = sc.nextInt();
		
		for(int i = 0;  i <= n; i++) {
			
		
			if(i % 2 ==0) {
			
			soma += i;		
				
			}
			
		}
		System.out.println("A soma dos números pares são: " + soma  );
		sc.close();

	}

}
